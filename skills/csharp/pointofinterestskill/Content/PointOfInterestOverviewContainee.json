    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": 75,
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "spacing": "None",
                  "size": "Medium",
                  "weight": "Bolder",
                  "color": "default",
                  "text": "@{Data.Name}"
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "default",
                  "text": "@{Data.AvailableDetails}"
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "default",
                  "text": "@{Data.Address}",
                  "maxLines": 1,
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "default",
                  "text": "@{Data.Hours}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": 25,
              "verticalContentAlignment": "Center",
              "horizontalAlignment": "Center",
              "backgroundImage": {
                "url": "@{Data.PointOfInterestImageUrl}",
                "verticalAlignment": "Center",
                "horizontalAlignment": "Center"
              }
            }
          ]
        }
      ],
      "selectAction": {
        "type": "Action.Submit",
        "data": "@{Data.SubmitText}"
      }
    }